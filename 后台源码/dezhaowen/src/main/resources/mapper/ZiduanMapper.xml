<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.accp.mapper.ZiduanMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.accp.domain.Ziduan">
        <id column="id" property="id" />
        <result column="width" property="width" />
        <result column="dname" property="dname" />
        <result column="zname" property="zname" />
        <result column="display" property="display" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, width, dname, zname, display
    </sql>
    <update id="upda">
        update ziduan set display=2
    </update>
    <update id="upto">
        update ziduan set display=1 where id=#{id}
    </update>
</mapper>
